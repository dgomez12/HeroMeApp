<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hero_bg_gradient"
    tools:context="com.devslopes.herome.Fragments.PickPowerFragment">

        <TextView
            android:id="@+id/textView"
            style="@android:style/TextAppearance.Material.Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="PICK A POWER"
            android:textColor="#FAC740"
            android:textSize="30sp" />

        <Button
            android:id="@+id/showBackstoryBtn"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="490dp"
            android:background="@drawable/hero_solid_button"
            android:backgroundTint="#FAC740"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="show backstory"
            android:textColor="#10161D"
            android:textSize="22dp" />

        <Button
            android:id="@+id/superStrengthBtn"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="420dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/superstrength"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="super strength"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/laserVisionBtn"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/laservision"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="laser vision"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/webSlicingBtn"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="280dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/spiderweb"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="web slicing"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/flightBtn"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="210dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/supermancrest"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="flight"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/turtlePowerBtn"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/turtlepower"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="Turtle power"
            android:textColor="#FAC740" />

        <Button
            android:id="@+id/lightningBtn"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="140dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/thorshammer"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="lightning"
            android:textColor="#FAC740" />

</FrameLayout>